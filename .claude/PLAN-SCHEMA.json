{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Plan Schema",
  "description": "Hierarchical project plan with SDLC state machine",
  "type": "object",
  "required": ["version", "project"],
  "properties": {
    "version": {
      "type": "string",
      "const": "2.0",
      "description": "Schema version"
    },
    "project": {
      "type": "object",
      "required": ["id", "name", "description", "status", "subprojects"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^PROJ-[0-9]{3}$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["planning", "active", "on-hold", "completed", "cancelled"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "createdBy": {
          "type": "string"
        },
        "locked": {
          "type": "boolean"
        },
        "lockedAt": {
          "type": "string",
          "format": "date-time"
        },
        "subprojects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/subproject"
          }
        }
      }
    }
  },
  "definitions": {
    "subproject": {
      "type": "object",
      "required": ["id", "name", "description", "status", "milestones"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^SUB-[0-9]{3}$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "active", "on-hold", "completed", "cancelled"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^SUB-[0-9]{3}$"
          }
        },
        "milestones": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/milestone"
          }
        }
      }
    },
    "milestone": {
      "type": "object",
      "required": ["id", "name", "description", "status", "tasks"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^MILE-[0-9]{3}$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "active", "completed"]
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^MILE-[0-9]{3}$"
          }
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/task"
          }
        }
      }
    },
    "task": {
      "type": "object",
      "required": ["id", "title", "status", "phase"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^TASK-[0-9]{3}$"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "blocked", "review", "testing", "completed", "cancelled"]
        },
        "phase": {
          "type": "string",
          "enum": ["requirements", "design", "implementation", "testing", "deployment", "maintenance"],
          "description": "SDLC phase"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^TASK-[0-9]{3}$"
          }
        },
        "assignee": {
          "type": "string"
        },
        "estimatedHours": {
          "type": "number",
          "minimum": 0
        },
        "actualHours": {
          "type": "number",
          "minimum": 0
        },
        "completionCriteria": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "testCases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "artifacts": {
          "type": "object",
          "properties": {
            "design": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "code": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tests": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "documentation": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "startedAt": {
          "type": "string",
          "format": "date-time"
        },
        "completedAt": {
          "type": "string",
          "format": "date-time"
        },
        "blockedReason": {
          "type": "string"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "author": {
                "type": "string"
              },
              "content": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
